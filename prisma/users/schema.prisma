generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/users"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(cuid())
  email           String     @unique
  name            String
  password        String
  roles           UserRole[]
  isEmailVerified Boolean    @default(false)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

enum UserRole {
  CLERK
  DINER
  DRIVER
  RESTAURANT_OWNER
  RESTAURANT_ADMIN
  ROOT
}
